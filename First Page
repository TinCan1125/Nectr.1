  <script>
    // Configuration
    const AFFILIATE_LINK = "https://www.nectr.energy/NICOALT";
    // Hook up main CTAs (if you want to change link programmatically)
    document.querySelectorAll('a[href="https://www.nectr.energy/NICOALT"]').forEach(a => {
      a.setAttribute('href', AFFILIATE_LINK);
    });
    // Modal logic
    const modal = document.getElementById('modal');
    const leadOpen = document.getElementById('leadOpen');
    const modalClose = document.getElementById('modalClose');
    const closeModal2 = document.getElementById('closeModal2');
    leadOpen.addEventListener('click', () => {
      modal.style.display = 'flex';
      modal.setAttribute('aria-hidden', 'false');
      window.scrollTo({top:0,behavior:'smooth'});
    });
    modalClose.addEventListener('click', closeModal);
    closeModal2.addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
      if(e.target === modal) closeModal();
    });
    function closeModal(){
      modal.style.display = 'none';
      modal.setAttribute('aria-hidden', 'true');
    }

    // Lead form demo (client-side capture; replace with your provider's form action)
    const leadForm = document.getElementById('leadForm');
    const emailInput = document.getElementById('emailInput');
    const leadFeedback = document.getElementById('leadFeedback');
    const leadSubmit = document.getElementById('leadSubmit');
    leadForm.addEventListener('submit', (e) => {
      // Prevent actual submission; simulate an async call
      const email = emailInput.value.trim();
      if(!email) return;
      // store locally (demo). Replace this block with a MailerLite/Brevo form post
      let list = JSON.parse(localStorage.getItem('cleanFocusSubscribers') || "[]");
      if(!list.includes(email)){
        list.push(email);
        localStorage.setItem('cleanFocusSubscribers', JSON.stringify(list));
      }
      leadFeedback.style.display = 'block';
      // open modal to show guide + allow download
      modal.style.display = 'flex';
      modal.setAttribute('aria-hidden', 'false');
      // send a simple console event for analytics
      console.info('leadCaptured', {email, when: Date.now()});
      // clear input
      emailInput.value = '';
    });

    // Download guide as .txt
    const downloadBtn = document.getElementById('downloadGuide');
    const guideContent = document.getElementById('guideContent').innerText;
    downloadBtn && downloadBtn.addEventListener('click', () => {
      const blob = new Blob([guideContent], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'Productivity-Boost-Blueprint.txt';
      document.body.appendChild(a);
      a.click();
      a.remove();
      URL.revokeObjectURL(url);
      // small analytics event
      console.info('guideDownloaded', {when: Date.now()});
    });

    // Hook primary CTA clicks for local tracking (you can add GA here)
    document.getElementById('primaryCta').addEventListener('click', function(){ console.info('affiliateClick', {when: Date.now(), href: AFFILIATE_LINK}) });

    // Accessibility: focus trap would be ideal in production (omitted for brevity)
  </script>
